#include <iostream>
using namespace std;

void menu();
int main(){
    menu();
    return 0;
};

void menu(){
    int opcion;
    cout<<"------CONECTA 4-----"<<endl;
    cout<<"Escoja una dificultad:"<<endl;
    cout<<"1) Facil"<<endl;
    cout<<"2) Media"<<endl;
    cout<<"3) Dificil"<<endl;
    cout<<"Opcion: ";
    cin>>opcion;

    switch(opcion){
        case 1:
            cout<<"Dificultad: Facil"<<endl;
            break;
        case 2:
            cout<<"Dificultad: Medio"<<endl;
            break;
        case 3:
            cout<<"Dificultad: Dificil"<<endl;
            break;
        default:
            cout<<"Ingrese una opcion valida"<<endl;
    }
}